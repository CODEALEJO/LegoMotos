@model IEnumerable<LavaderoMotos.Models.Caja>

@{
    ViewData["Title"] = "Historial de Cajas";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <div>
            @{
                var cajaAbierta = Model.FirstOrDefault(c => c.FechaCierre == null);
                if (cajaAbierta == null)
                {
                    <a asp-action="Apertura" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-down"></i> Abrir Caja
                    </a>
                }
                else
                {
                    <div class="alert alert-info">
                        Hay una caja abierta desde @cajaAbierta.FechaApertura.ToString("g")
                        <a asp-action="Detalle" asp-route-id="@cajaAbierta.Id" class="btn btn-sm btn-info ms-2">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                    </div>
                }
            }
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Fecha Apertura</th>
                    <th>Fecha Cierre</th>
                    <th>Usuario Apertura</th>
                    <th>Saldo Inicial</th>
                    <th>Saldo Final Efectivo</th>
                    <th>Saldo Final Transferencia</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FechaApertura.ToString("g")</td>
                        <td>@(item.FechaCierre?.ToString("g") ?? "-")</td>
                        <td>@item.UsuarioApertura</td>
                        <td class="text-end">@item.SaldoInicialEfectivo.ToString("N0")</td>
                        <td class="text-end">
                            @if (item.FechaCierre != null)
                            {
                                @item.SaldoFinalEfectivo.ToString("N0")
                            }
                            else
                            {
                                <text>-</text>
                            }
                        </td>
                        <td class="text-end">
                            @if (item.FechaCierre != null)
                            {
                                @item.SaldoFinalTransferencia.ToString("N0")
                            }
                            else
                            {
                                <text>-</text>
                            }
                        </td>
                        <td>
                            @if (item.FechaCierre == null)
                            {
                                <span class="badge bg-success">Abierta</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Cerrada</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Detalle" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Detalle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>