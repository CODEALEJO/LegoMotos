@model LavaderoMotos.Models.Caja

@{
    ViewData["Title"] = "Detalle de Caja";
}

<!-- Mostrar mensajes de éxito/error -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Información de Caja</h5>
                    <dl class="row">
                        <dt class="col-sm-5">Fecha Apertura:</dt>
                        <dd class="col-sm-7">@Model.FechaApertura.ToString("g")</dd>

                        <dt class="col-sm-5">Usuario Apertura:</dt>
                        <dd class="col-sm-7">@Model.UsuarioApertura</dd>

                        @if (Model.FechaCierre != null)
                        {
                            <dt class="col-sm-5">Fecha Cierre:</dt>
                            <dd class="col-sm-7">@Model.FechaCierre.Value.ToString("g")</dd>

                            <dt class="col-sm-5">Usuario Cierre:</dt>
                            <dd class="col-sm-7">@Model.UsuarioCierre</dd>
                        }
                        else
                        {
                            <dt class="col-sm-5">Estado:</dt>
                            <dd class="col-sm-7"><span class="badge bg-success">Abierta</span></dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <h4>Movimientos</h4>
        @if (Model.FechaCierre == null)
        {
            <a asp-action="CrearGasto" asp-route-cajaId="@Model.Id" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Registrar Gasto
            </a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Tipo</th>
                    <th>Forma Pago</th>
                    <th>Monto</th>
                    <th>Descripción</th>
                    <th>Venta</th>
                    <th>Usuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movimiento in Model.Movimientos.OrderByDescending(m => m.Fecha))
                {
                    <tr>
                        <td>@movimiento.Fecha.ToString("g")</td>
                        <td>
                            @if (movimiento.Tipo == TipoMovimiento.Ingreso)
                            {
                                <span class="badge bg-success">Ingreso</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Egreso</span>
                            }
                        </td>
                        <td>@movimiento.FormaPago</td>
                        <td class="text-end">@movimiento.Monto.ToString("N0")</td>
                        <td>@movimiento.Descripcion</td>
                        <td>
                            @if (movimiento.VentaId != null)
                            {
                                <a asp-controller="Venta" asp-action="Print" asp-route-id="@movimiento.VentaId">
                                    Venta #@movimiento.VentaId
                                </a>
                            }
                        </td>
                        <td>@movimiento.Usuario</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-danger">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

        @if (Model.FechaCierre == null)
        {
            <a asp-action="Cierre" asp-route-id="@Model.Id" class="btn btn-success ms-2">
                <i class="bi bi-lock"></i> Cerrar Caja
            </a>
        }
    </div>
</div>