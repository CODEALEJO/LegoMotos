@model LavaderoMotos.Models.Venta

<div class="container mt-4">
    <h2 class="mb-4 text-center text-danger">Eliminar Venta</h2>

    <div class="alert alert-warning">
        <strong>¡Advertencia!</strong> Esta acción no se puede deshacer. ¿Estás seguro de que deseas eliminar esta venta?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Placa:</dt>
        <dd class="col-sm-9">@Model.Placa</dd>

        <dt class="col-sm-3">Fecha:</dt>
        <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Kilometraje:</dt>
        <dd class="col-sm-9">@Model.Kilometraje</dd>

        <dt class="col-sm-3">Productos:</dt>
        <dd class="col-sm-9">
            <ul class="list-unstyled">
                @foreach (var producto in Model.Productos)
                {
                    <li>
                        <strong>@producto.Producto</strong> - 
                        Cantidad: @producto.Cantidad - 
                        Precio: $@producto.Precio - 
                        Total: $@producto.Total
                    </li>
                }
            </ul>
        </dd>

        <dt class="col-sm-3">Total Venta:</dt>
        <dd class="col-sm-9">$@Model.TotalFormateado</dd>
    </dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirmar Eliminación
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</form>
</div>

<!-- Agregar iconos de Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">