@model LavaderoMotos.Models.ServicioViewModel

<div class="col-md-5">
    <div class="form-group">
        <label class="control-label">Descripci√≥n del Servicio</label>
        <input asp-for="Descripcion" class="form-control servicio-desc" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
</div>
<div class="col-md-3">
    <div class="form-group">
        <label class="control-label">Precio</label>
        <input asp-for="Precio" class="form-control servicio-precio" type="number" step="0.01" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
</div>
<div class="col-md-2">
    <div class="form-group">
        <label class="control-label">Completado</label>
        <div class="checkbox">
            <input asp-for="Completado" class="servicio-completado" />
        </div>
    </div>
</div>
<div class="col-md-2">
    <div class="form-group">
        <label class="control-label" style="visibility: hidden;">Eliminar</label>
        <button type="button" class="btn btn-danger btn-remove-servicio">
            <span class="glyphicon glyphicon-trash"></span> Eliminar
        </button>
    </div>
</div>