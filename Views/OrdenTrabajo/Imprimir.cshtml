            border-bottom: 1px dotted #ccc;
        }

        .text-right {
            text-align: right;
        }

        .total-row {
            font-weight: bold;
            border-top: 2px solid #000;
            margin-top: 5px;
            padding-top: 5px;
        }

        .signature-area {
            margin-top: 15px;
            border-top: 1px dashed #000;
            padding-top: 10px;
        }

        .signature-line {
            border-top: 1px solid #000;
            width: 80%;
            margin: 15px auto;
            padding-top: 25px;
            text-align: center;
            font-size: 12px;
        }

        .footer {
            text-align: center;
            margin-top: 15px;
            font-size: 11px;
            border-top: 1px dashed #000;
            padding-top: 10px;
        }

        .no-print {
            display: none;
        }

        .completed {
            color: green;
        }

        .pending {
            color: orange;
        }

        /* Estilos para el inventario de la moto */
        .inventory-section {
            margin: 15px 0;
            border: 1px solid #000;
            padding: 10px;
            border-radius: 5px;
        }

        .inventory-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 8px;
            margin-bottom: 15px;
        }

        .inventory-item {
            display: flex;
            align-items: center;
        }

        .inventory-checkbox {
            margin-right: 5px;
            width: 14px;
            height: 14px;
            border: 1px solid #000;
        }

        /* Estilos para las im√°genes de la moto */
        .moto-images {
            display: flex;
            justify-content: center;
            margin-top: 15px;
        }

        .moto-image-container {
            width: 100%;
            text-align: center;
        }

        .moto-image {
            max-width: 100%;
            height: auto;
            filter: grayscale(100%);
            opacity: 0.8;
            border: 1px solid #ccc;
        }

        .moto-label {
            font-size: 12px;
            font-weight: bold;
            margin-top: 5px;
            text-align: center;
        }

        @@media print {
            @@page {
                size: letter;
                margin: 0;
            }

            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
                width: 210mm;
                height: 297mm;
            }

            .no-print {
                display: none !important;
            }

            /* Ocultar checkbox de impresi√≥n pero mantener el borde */
            .inventory-checkbox {
                background-color: transparent !important;
                -webkit-print-color-adjust: exact;
            }
        }

        @@media screen {
            .no-print {
                display: block;
                text-align: center;
                margin-top: 20px;
            }

            .btn-volver {
                background-color: #dc3545;
                color: white;
                padding: 8px 16px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                text-decoration: none;
                font-size: 14px;
                display: inline-block;
                margin: 10px auto;
            }

            .btn-volver:hover {
                background-color: #bb2d3b;
                color: white;
            }
        }
    </style>
</head>

