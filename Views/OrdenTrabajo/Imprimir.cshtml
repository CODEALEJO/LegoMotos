            font-weight: bold;
            text-align: center;
            margin: 10px 0;
            border-bottom: 2px dashed #000;
            padding-bottom: 10px;
        }

        .section {
            margin: 10px 0;
            border-bottom: 1px dashed #000;
            padding-bottom: 10px;
        }

        .section-title {
            font-weight: bold;
            margin-bottom: 5px;
            border-bottom: 1px solid #000;
            padding-bottom: 3px;
            font-size: 14px;
        }

        .row {
            display: flex;
            margin-bottom: 3px;
        }

        .label {
            font-weight: bold;
            width: 120px;
        }

        .value {
            flex: 1;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 5px 0;
            font-size: 12px;
        }

        th {
            text-align: left;
            border-bottom: 2px solid #000;
            padding: 3px 0;
            font-size: 12px;
        }

        td {
