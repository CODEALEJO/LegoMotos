@model LavaderoMotos.Models.OrdenTrabajoViewModel

@{
    ViewData["Title"] = Model.Orden.Id == 0 ? "Crear Orden de Trabajo" : "Editar Orden de Trabajo";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<hr />
<form asp-action="@(Model.Orden.Id == 0 ? "Create" : "Edit")">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Orden.Id" />

    <div class="form-horizontal">
        <h4>Información del Vehículo</h4>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Orden.NombreVehiculo" class="control-label"></label>
                    <input asp-for="Orden.NombreVehiculo" class="form-control" />
                    <span asp-validation-for="Orden.NombreVehiculo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Orden.Placa" class="control-label"></label>
                    <input asp-for="Orden.Placa" class="form-control" />
                    <span asp-validation-for="Orden.Placa" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Orden.Kilometraje" class="control-label"></label>
                    <input asp-for="Orden.Kilometraje" class="form-control" />
                    <span asp-validation-for="Orden.Kilometraje" class="text-danger"></span>
                </div>
            </div>
        </div>

        <h4>Servicios a Realizar</h4>
        <div id="servicios-container">
            @for (int i = 0; i < Model.Servicios.Count; i++)
            {
                <div class="servicio-row row">
                    @if (Model.Servicios[i].Id != 0)
                    {
                        <input type="hidden" asp-for="Servicios[i].Id" />
                    }
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label">Descripción del Servicio</label>
                            <input asp-for="Servicios[i].Descripcion" class="form-control servicio-desc" />
                            <span asp-validation-for="Servicios[i].Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Precio</label>
                            <input asp-for="Servicios[i].Precio" class="form-control servicio-precio" type="number"
                                step="0.01" />
                            <span asp-validation-for="Servicios[i].Precio" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Completado</label>
                            <div class="checkbox">
                                <input asp-for="Servicios[i].Completado" class="servicio-completado" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label" style="visibility: hidden;">Eliminar</label>
                            <button type="button" class="btn btn-danger btn-remove-servicio"
                                style="display: @(i == 0 ? "none" : "block");">
                                <span class="glyphicon glyphicon-trash"></span> Eliminar
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- ESTOS ELEMENTOS DEBEN ESTAR FUERA DEL BUCLE -->
        <div class="form-group">
            <button type="button" id="btn-agregar-servicio" class="btn btn-success">
                <span class="glyphicon glyphicon-plus"></span> Agregar Servicio
            </button>
        </div>

        <h4>Información de Pago</h4>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Orden.Adelanto" class="control-label"></label>
                    <input asp-for="Orden.Adelanto" class="form-control" id="adelanto" type="number" step="0.01" />
                    <span asp-validation-for="Orden.Adelanto" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Total Servicios</label>
                    <input type="text" class="form-control" id="total-servicios" readonly
                        value="@Model.Orden.TotalServicios.ToString("N0")" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Pendiente a Pagar</label>
                    <input type="text" class="form-control" id="pendiente-pagar" readonly
                        value="@Model.Orden.PendientePagar.ToString("N0")" />
                </div>
            </div>
        </div>

        <!-- Después de la sección de Información de Pago -->
        <h4>Notas y Observaciones</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Orden.Notas" class="control-label"></label>
                    <textarea asp-for="Orden.Notas" class="form-control" rows="4"
                        placeholder="Escriba aquí cualquier observación importante sobre el vehículo o el trabajo a realizar..."></textarea>
                    <span asp-validation-for="Orden.Notas" class="text-danger"></span>
                </div>
            </div>
        </div>
        

        <div class="form-group">
            <label asp-for="Orden.Estado" class="control-label"></label>
            <select asp-for="Orden.Estado" class="form-control">
                <option value="Pendiente">Pendiente</option>
                <option value="En Proceso">En Proceso</option>
                <option value="Completada">Completada</option>
            </select>
            <span asp-validation-for="Orden.Estado" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Función para calcular totales
            function calcularTotales() {
                let total = 0;
                $('.servicio-precio').each(function () {
                    const precio = parseFloat($(this).val()) || 0;
                    total += precio;
                });

                const adelanto = parseFloat($('#adelanto').val()) || 0;
                const pendiente = total - adelanto;

                $('#total-servicios').val('$' + total.toLocaleString('es-CO'));
                $('#pendiente-pagar').val('$' + (pendiente > 0 ? pendiente.toLocaleString('es-CO') : '0'));
            }

            // Calcular totales al cargar
            calcularTotales();

            // Event listeners
            $(document).on('input', '.servicio-precio, #adelanto', calcularTotales);

            // Agregar servicio
            // En el JavaScript para agregar servicios
            $('#btn-agregar-servicio').click(function () {
                const index = $('.servicio-row').length;
                const newRow = `
                <div class="servicio-row row">
                    <input type="hidden" name="Servicios[${index}].Id" value="0" />
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label">Descripción del Servicio</label>
                            <input name="Servicios[${index}].Descripcion" class="form-control servicio-desc" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Servicios[${index}].Descripcion" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Precio</label>
                            <input name="Servicios[${index}].Precio" class="form-control servicio-precio" type="number" step="0.01" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Servicios[${index}].Precio" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Completado</label>
                            <div class="checkbox">
                                <input name="Servicios[${index}].Completado" type="checkbox" class="servicio-completado" value="true" />
                                <input type="hidden" name="Servicios[${index}].Completado" value="false" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label" style="visibility: hidden;">Eliminar</label>
                            <button type="button" class="btn btn-danger btn-remove-servicio">
                                <span class="glyphicon glyphicon-trash"></span> Eliminar
                            </button>
                        </div>
                    </div>
                </div>`;

                $('#servicios-container').append(newRow);
                calcularTotales();
            });
            // Eliminar servicio
            $(document).on('click', '.btn-remove-servicio', function () {
                $(this).closest('.servicio-row').remove();
                // Reindexar los servicios después de eliminar
                $('.servicio-row').each(function (index) {
                    $(this).find('input, select').each(function () {
                        const name = $(this).attr('name');
                        if (name) {
                            $(this).attr('name', name.replace(/\[\d+\]/, '[' + index + ']'));
                        }
                    });
                });
                calcularTotales();
            });
        });
    </script>
}